<Window x:Class="WPF_Calc.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Calc"
        mc:Ignorable="d"
        Title="AboutWindow" Height="400" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/fav5.png">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/OIG4 (1).jpg"/>
        </Grid.Background>
        <Label Content="Author : Muharax" HorizontalAlignment="Center" VerticalAlignment="Top" Width="88" FontFamily="Bahnschrift Light" FontSize="10" Height="21" Background="{x:Null}">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Red" Offset="1"/>
                    <GradientStop Color="Red"/>
                    <GradientStop Color="#FFFFA400" Offset="0.468"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>

    </Grid>
</Window>
